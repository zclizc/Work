.container {
  padding: 20rpx;
}

.filter-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.filter-item {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

.type-item, .difficulty-item {
  margin: 20rpx 0;
}

.button-group {
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}

.btn {
  min-width: 240rpx;
}

.question-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
}

.question-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-number {
  font-size: 28rpx;
  color: #666;
}

.question-type {
  font-size: 28rpx;
  color: #1890ff;
}

.question-difficulty {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.question-difficulty.easy {
  color: #52c41a;
  background: #f6ffed;
}

.question-difficulty.medium {
  color: #faad14;
  background: #fffbe6;
}

.question-difficulty.hard {
  color: #f5222d;
  background: #fff1f0;
}

.question-content {
  font-size: 32rpx;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.options {
  margin-bottom: 30rpx;
}

.option {
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.option.selected {
  background: #e6f3ff;
  border-color: #1890ff;
}

.option.correct {
  background: #f6ffed;
  border-color: #52c41a;
}

.option.wrong {
  background: #fff1f0;
  border-color: #ff4d4f;
}

.explanation {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.result {
  text-align: center;
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.result-content {
  margin-bottom: 40rpx;
}

.result-content view {
  margin: 10rpx 0;
  font-size: 32rpx;
  color: #666;
}
